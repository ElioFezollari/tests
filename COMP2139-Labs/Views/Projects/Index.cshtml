@model List<Project>
@{
    ViewData["Tittle"] = "Project";
}

<!DOCTYPE html>
<html>
    <head>
<h2>Projects</h2>
@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <td>
                    Id
                </td>
                <td>
                    Name
                </td>
                <td>
                    Descrption
                </td>
            </tr>
        </thead>

        @foreach(var project in Model)
        {
            <tr>
                <td>
                    @project.ProjectId
                </td>
                <td>
                    @project.Name
                </td>
                <td>
                    @project.Description
                </td>
            </tr>
        }
    </table>
}
</head>
</html>